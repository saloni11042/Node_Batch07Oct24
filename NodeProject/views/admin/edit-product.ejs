<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" method="POST" action="/admin/add-product">
            <input name="title" type="text" placeholder="Enter book name" value="<% if(editing){%> <%= product.title%> <% } %>">
            <br>
            <br>
            <input name="imageUrl" type="text" placeholder="Enter Image Url" value="<% if(editing){%> <%= product.imageUrl%> <% } %>">
            <br>
            <br>
            <input name="price" type="number" size="0.01" placeholder="Enter book's price" value="<% if(editing){%> <%= product.price%> <% } %>">
            <br>
            <br>
            <textarea name="description" id="" rows="5" placeholder="Enter book Description"><% if(editing){%> <%= product.description%> <% } %></textarea>
            <br><br>
            <button type="submit"><% if(editing){%> Update Product <% } else{%>Add Product<% } %></button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>